    <!-- Sign-up Start -->
    <div class="container-xxl py-5">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-lg-5 wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="text-secondary text-uppercase mb-3">REGISTRO</h6>
                    <h1 class="mb-5">Registrate ahora!</h1>
                    <p class="mb-5">Registrate ahora y obten más información sobre nuestros servicios!</p>
                    <div class="d-flex align-items-center">
                        <i class="fa fa-user-plus fa-2x flex-shrink-0 bg-primary p-3 text-white"></i>

                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="bg-light text-center p-5 wow fadeIn" data-wow-delay="0.5s">
                        <form action="@Url.Action("Registrar", "Registro")" method="post" data-ajax="false">
                            <div class="ui-field-contain">
                                <label for="IDEmpresa">ID Empresa:</label>
                                <input type="text" name="IDEmpresa" id="IDEmpresa" placeholder="ID Empresa">
                            </div>
                            <div class="ui-field-contain">
                                <label for="NombreContactoPrincipal">Nombre Completo:</label>
                                <input type="text" name="NombreContactoPrincipal" id="NombreContactoPrincipal" placeholder="Nombre Completo">
                            </div>
                            <div class="ui-field-contain">
                                <label for="CorreoContactoPrincipal">Correo Electrónico:</label>
                                <input type="email" name="CorreoContactoPrincipal" id="CorreoContactoPrincipal" placeholder="Correo Electrónico">
                            </div>
                            <div class="ui-field-contain">
                                <label for="NumeroContactoPrincipal">Número de Teléfono:</label>
                                <input type="tel" name="NumeroContactoPrincipal" id="NumeroContactoPrincipal" placeholder="Número de Teléfono">
                            </div>
                            <div class="ui-field-contain">
                                <label for="PaisResidencia">País de Residencia:</label>
                                <select name="PaisResidencia" id="PaisResidencia">
                                    <option value="">País de Residencia</option>
                                    <option value="Costa Rica">Costa Rica</option>
                                    <option value="Salvador">Salvador</option>
                                    <option value="Nicaragua">Nicaragua</option>
                                    <option value="Honduras">Honduras</option>
                                    <option value="Panamá">Panamá</option>
                                </select>
                            </div>
                            <div class="ui-field-contain">
                                <label for="Usuario">Usuario:</label>
                                <input type="text" name="Usuario" id="Usuario" placeholder="Usuario">
                            </div>
                            <div class="ui-field-contain">
                                <label for="Contraseñas">Contraseña:</label>
                                <input type="password" name="Contraseñas" id="Contraseñas" placeholder="Contraseña">
                            </div>
                            <input type="submit" value="Registrarse">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Sign-up End -->
