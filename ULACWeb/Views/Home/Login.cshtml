
@{
    ViewBag.Title = "Login";
}


<body>
    @section navbar{
    }


    <!-- Sign-in Start -->

    <div class="container-xxl py-5">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-lg-5 wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="text-secondary text-uppercase mb-3">INICIO DE SESIÓN</h6>
                    <h1 class="mb-5">¡Bienvenido de nuevo!</h1>
                    <p class="mb-5">Ingrese sus credenciales para iniciar sesión en su cuenta.</p>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-box-arrow-in-right fa-2x flex-shrink-0 bg-primary p-3 text-white"></i>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="bg-light text-center p-5 wow fadeIn" data-wow-delay="0.5s">
                        <form action="@Url.Action("Index", "Login")" id="" method="post">
                            <div class="form-group mb-4">
                                <input name="Usuario" type="text" class="form-control border-0" placeholder="Nombre de Usuario" style="height: 55px; margin-bottom: 15px;">
                            </div>

                            <div class="form-group mb-4">
                                <input name="Contraseñas" id="password" type="password" class="form-control border-0" placeholder="Contraseña" style="height: 55px;">
                            </div>

                            <div class="form-group form-check mb-4">
                                <input type="checkbox" class="form-check-input" id="showPassword">
                                <label class="form-check-label" for="showPassword">Mostrar contraseña</label>
                            </div>

                            <button class="btn btn-primary w-100 py-3" type="submit">Iniciar Sesión</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="mensajeExitoModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Verificación Exitosa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (TempData["MensajeExito"] != null)
                    {
                        @Html.Raw(TempData["MensajeExito"].ToString())
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    @if (TempData["MensajeExito"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                // Muestra el modal de Bootstrap
                $('#mensajeExitoModal').modal('show');
            });
        </script>
    }

    <!-- Sign-in End -->
    @section footer{

    }
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        jQuery(document).ready(function () {
            jQuery('#showPassword').change(function () {
                var isChecked = jQuery(this).prop('checked');
                if (isChecked) {
                    jQuery('#password').attr('type', 'text');
                } else {
                    jQuery('#password').attr('type', 'password');
                }
            });
        });
    </script>
    <script>
            jQuery(document).ready(function () {
                jQuery('#loginForm').submit(function (e) {
              e.preventDefault(); // Evitar el envío del formulario normalmente

              // Realizar la solicitud POST al controlador
                    jQuery.ajax({
                  url: '@Url.Action("Index", "Login")',
                  type: 'POST',
                  data: $(this).serialize(),
                  success: function (response) {
                      if (response.hasOwnProperty('success')) {
                          if (response.success === true) {
                            // Si las credenciales son válidas, redirigir al usuario a la página de inicio
                            window.location.href = '@Url.Action("Inicio", "Home")';
                          } else if (response.success === false) {
                            // Si las credenciales son inválidas, mostrar un mensaje de error
                            alert(response.message);
                          }
                        } else {
                          // La respuesta del servidor no tiene la propiedad 'success'
                          alert('Error al procesar la respuesta del servidor.');
                        }
                      },
                  error: function () {
                      alert('Error al intentar iniciar sesión. Por favor, inténtelo de nuevo más tarde.');
                  }
              });
          });
      });
    </script>
   
</body>


