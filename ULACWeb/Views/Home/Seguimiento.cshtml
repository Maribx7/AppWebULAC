    <form action="@Url.Action("ObtenerDatosSeguimiento", "Seguimiento")" method="post">
        <button type="submit">Cargar datos</button>

        <table data-role="table" id="movie-table" data-mode="reflow" class="ui-responsive table-stroke">
            <thead>
                <tr>
                    <th>ID viaje</th>
                    <th>ID Empresa</th>
                    <th>Chofer</th>
                    <th>Estado</th>
                    <th>Código Entrega</th>
                    <th>Compañía Contratante</th>
                    <th>Destino</th>
                    <th>Origen</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var seguimiento in Model)
                    {
                        <tr>
                            <td>@seguimiento.IDViaje</td>
                            <td>@seguimiento.IDEmpresa</td>
                            <td>@seguimiento.Chofer</td>
                            <td>@seguimiento.Estado</td>
                            <td>@seguimiento.CodigoEntrega</td>
                            <td>@seguimiento.CompaniaContratante</td>
                            <td>@seguimiento.Destino</td>
                            <td>@seguimiento.Origen</td>
                        </tr>
                    }
                }
                else
                {
                    // Mostrar un mensaje de error o una vista vacía
                    <p>No hay datos de seguimiento disponibles.</p>
                }
            </tbody>

        </table>
        <input type="hidden" name="IDEmpresa" value="@Session["IDEmpresa"]" />

    </form>
