                background-color: #eaeaea;
            }

        /* Estilos para el formulario de búsqueda y filtro */
        .search-form {
            margin-bottom: 20px;
        }

            .search-form input[type="text"] {
                width: 200px;
                padding: 5px;
                margin-right: 10px;
            }

            .search-form select {
                padding: 5px;
            }
