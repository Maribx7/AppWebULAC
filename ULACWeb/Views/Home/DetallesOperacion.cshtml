                background-color: #f2f2f2;
            }

            table tr:hover {
                background-color: #eaeaea;
            }
    </style>
    <!-- Favicon -->
    <link href="~/Content/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Content/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Content/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow border-top border-5 border-primary sticky-top p-0">
        <a href="#" class="navbar-brand bg-primary d-flex align-items-center px-4 px-lg-5">
            <h2 class="mb-2 text-white">Transportes ULAC</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="inicio.html" class="nav-item nav-link active">Inicio</a>
                <a href="seguimiento.html" class="nav-item nav-link">Seguimiento de Envíos</a>
                <a href="#" class="nav-item nav-link">Detalles de Operación</a>
                <a href="perfil.html" class="nav-item nav-link">Perfil</a>
                <a href="#" class="nav-item nav-link">Cerrar Sesión</a>
                <!-- Mostrar IDEmpresa en la barra de navegación -->
                <div class="nav-item">
                    <span class="nav-link">
                        @if (Session["IDEmpresa"] != null)
                        {
                            <span name="IDEmpresa">IDEmpresa: @Session["IDEmpresa"]</span>
                        }
                    </span>
                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    <form action="@Url.Action("ObtenerDetalleOperacion", "DetallesOperacion")" method="post">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Cargar Datos</button>
                   
                </div>
            </div>

            <div class="row">

                <table data-role="table" id="table-detalleoperacion" data-mode="reflow" class="ui-responsive table-stroke">
                    <thead>
                        <tr>
                            <th>ID Operación</th>
                            <th>Industria</th>
                            <th>Ruta</th>
                            <th>Contacto</th>
                            <th>Tiempo Estimado</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var Detalles in Model)
                            {
                                <tr>
                                    <td>@Detalles.IDOperacion</td>
                                    <td>@Detalles.Industria</td>
                                    <td>@Detalles.Ruta</td>
                                    <td>@Detalles.Contacto</td>
                                    <td>@Detalles.TiempoEstimado</td>
                                    <td>@Detalles.Estado</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <p> No se encontraron detalles de operación.</p >
                        }

                    </tbody>
                </table>
                <input type="hidden" name="IDEmpresa" value="@Session["IDEmpresa"]" />
            </div>
        </div>
    </form>



    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 wow fadeIn" data-wow-delay="0.1s" style="margin-top: 6rem;">
        <div class="container py-5">
            <div class="row g-5 justify-content-center">
                <!-- Modificación: Agregar la clase justify-content-center -->
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Dirección</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Caldera, Costa Rica</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+506 89884512</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>gerenciatransulac@transulac.cr</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-outline-light btn-social" href="https://twitter.com/?lang=es"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-social" href="https://www.facebook.com/?locale=es_LA"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social" href="https://www.youtube.com/"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Servicio de transporte por carretera</h4>
                    <a class="btn btn-link" href="">Kenworth</a>
                    <a class="btn btn-link" href="">Freightliner</a>
                    <a class="btn btn-link" href="">MACK</a>
                    <a class="btn btn-link" href="">International</a>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Links Rápidos</h4>
                    <a class="btn btn-link" href="about.html">Sobre Nosotros</a>
                    <a class="btn btn-link" href="contact.html">Contáctenos</a>
                    <a class="btn btn-link" href="registro.html">Registro</a>
                    <a class="btn btn-link" href="login.html">Login</a>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="copyright">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        &copy; <a class="border-bottom" href="#">Transportes ULAC</a>, Todos los derechos reservados.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-0 back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/lib/wow/wow.min.js"></script>
    <script src="~/Content/lib/easing/easing.min.js"></script>
    <script src="~/Content/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Content/lib/counterup/counterup.min.js"></script>
    <script src="~/Content/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Content/js/main.js"></script>

    <script>
        $(document).on("pagecreate", function () {
            $.ajax({
                url: '/DetallesOperacion/ObtenerDetalleOperacion', // Ruta del controlador para obtener los datos
                method: 'GET', // Método HTTP GET para obtener los datos
                success: function (data) {
                    // Actualiza el contenedor con los datos recibidos
                    $('#data-container').html(data).enhanceWithin(); // Asegura que los estilos de jQuery Mobile se apliquen correctamente
                },
                error: function (xhr, status, error) {
                    // Manejo de errores
                    console.error(error);
                }
            });
        });
    </script>
</body>



